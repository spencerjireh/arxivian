# Docker Configuration
POSTGRES_USER=arxiv_user
POSTGRES_PASSWORD=arxiv_password
POSTGRES_DB=arxiv_rag
DB_PORT=5432
BACKEND_PORT=8000
FRONTEND_PORT=5173

# Database
POSTGRES_URL=postgresql+asyncpg://user:password@localhost:5432/arxiv_rag

# LLM Configuration (LiteLLM-format: "provider/model")
DEFAULT_LLM_MODEL=nvidia_nim/openai/gpt-oss-120b
ALLOWED_LLM_MODELS=nvidia_nim/openai/gpt-oss-120b,openai/gpt-4o-mini
# Override model for structured output calls (router, guardrail, grading). Omit = use default.
STRUCTURED_OUTPUT_MODEL=

# Provider API Keys
OPENAI_API_KEY=sk-your-key-here
NVIDIA_NIM_API_KEY=your-nvidia-nim-api-key
NVIDIA_NIM_API_BASE=https://integrate.api.nvidia.com/v1

# Jina Embeddings
JINA_API_KEY=jina_your-key-here

# Search Configuration
DEFAULT_TOP_K=3
RRF_K=60

# Chunking Configuration
CHUNK_SIZE_WORDS=600
CHUNK_OVERLAP_WORDS=100
MIN_CHUNK_WORDS=100

# Agent Configuration
GUARDRAIL_THRESHOLD=75
MAX_RETRIEVAL_ATTEMPTS=3

# CORS (comma-separated origins; leave empty to block all cross-origin requests)
CORS_ORIGINS=http://localhost:5173

# Application
DEBUG=false
SQL_ECHO=false
LOG_LEVEL=INFO

# Langfuse Observability (optional)
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_HOST=http://langfuse:3000

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
CLERK_DOMAIN=your-app.clerk.accounts.dev

# API Authentication
API_KEY=

# Celery/Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_TASK_TIMEOUT=600
# RediSearch (used by langgraph-checkpoint-redis) only works on DB 0
REDIS_CHECKPOINT_URL=redis://redis:6379/0

# Scheduled jobs
INGEST_SCHEDULE_CRON=0 2 * * *
CLEANUP_SCHEDULE_CRON=0 3 * * *
CLEANUP_RETENTION_DAYS=90
