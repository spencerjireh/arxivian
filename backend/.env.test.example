# Test Database Configuration
# These values must match the healthcheck in docker-compose.yml
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
POSTGRES_DB=arxiv_rag_test

# Database connection for test runner
POSTGRES_URL=postgresql+asyncpg://test_user:test_password@test-db:5432/arxiv_rag_test

# LLM Configuration (mocked in tests)
DEFAULT_LLM_MODEL=openai/gpt-4o-mini
ALLOWED_LLM_MODELS=openai/gpt-4o-mini,nvidia_nim/openai/gpt-oss-120b
OPENAI_API_KEY=sk-test-key-not-used-in-unit-tests

# Jina Embeddings (not used in unit tests)
JINA_API_KEY=jina_test_key

# Search Configuration
DEFAULT_TOP_K=3
RRF_K=60

# Chunking Configuration
CHUNK_SIZE_WORDS=600
CHUNK_OVERLAP_WORDS=100
MIN_CHUNK_WORDS=100

# Agent Configuration
GUARDRAIL_THRESHOLD=75
MAX_RETRIEVAL_ATTEMPTS=3

# Application
DEBUG=true
LOG_LEVEL=DEBUG

# Langfuse disabled for tests
LANGFUSE_ENABLED=false
